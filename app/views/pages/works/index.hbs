<div class="row">
  <div class="col-md-2">
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        sculpture
        <span class="badge badge-primary badge-pill">{{count.sculpture}} </span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        painting
        <span class="badge badge-primary badge-pill">{{count.painting}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        drawing
        <span class="badge badge-primary badge-pill">{{count.drawing}}</span>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <b>total</b>
        <span class="badge badge-primary badge-pill">{{count.all}}</span>
      </li>
    </ul>
  </div>
  <div class="col-md-10">
    <div class="row">
      {{#each data}}
      <div class="col-md-2">
        <div class="card mb-3">
          <div class="thumbnail" style="background-image: url('{{this.thumbnail}}');">
            <p class="card-title text-center">{{this.title}}</p>
          </div>
          <div class="card-body">

            <p class="card-text"><small><i>{{this.modality}} | {{this.material}} | {{this.category}}</i></small></p>
          </div>
          <div class="card-body">
            <form action="/works/{{this._id}}/delete?_method=DELETE" method="POST">
              <input type="hidden" name="_method" id="hidden_delete" value="DELETE">
              <input type="submit" name="submit" id="delete_work" value="delete" class="btn btn-link">
              <a href="/works/{{this._id}}/detail" class="btn btn-link">view detail</a>
            </form>

          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>