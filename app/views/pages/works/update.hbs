<div class="card w-75" style="margin: auto;">
  <div class="card-body">
    <h5 class="card-title">Update {{data.title}}</h5>
    <form action="/works/{{data._id}}/update?_method=PUT" method="POST">
      <input type="hidden" name="_method" id="hidden_put" value="PUT">
      <div class="form-row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="title">title</label>
            <input name="title" type="text" class="form-control" id="title" value="{{data.title}}">
          </div>
          <div class="form-group">
            <label for="thumbnail">thumbnail</label>
            <input name="thumbnail" type="text" class="form-control" id="thumbnail" value="{{data.thumbnail}}">
          </div>
          <div class="form-group">
            <label for="desc">description</label>
            <textarea name="desc" class="form-control" id="desc" rows="3">{{data.desc}}</textarea>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="modality">choose modality</label>
            <select id="modality" name="modality" class="form-control">
              {{#select data.modality}}
              <option value="sculpture">sculpture</option>
              <option value="painting">painting</option>
              <option value="drawing">drawing</option>
              {{/select}}
            </select>
          </div>
          <div class="form-group">
            <label for="material">choose material</label>
            <select id="material" name="material" class="form-control">
              {{#select data.material}}
              <option value="bronze">bronze</option>
              <option value="marble">marble</option>
              <option value="plaster">plaster</option>
              <option value="alabaster">alabaster</option>
              <option value="clay">clay</option>
              <option value="oil and canvas">oil and canvas</option>
              <option value="pencil">pencil</option>
              {{/select}}
            </select>
          </div>
          <div class="form-group">
            <label for="category">choose category</label>
            <select id="category" name="category" class="form-control">
              {{#select data.category}}
              <option value="figure">figure</option>
              <option value="abstract">abstract</option>
              <option value="portrait">portrait</option>
              <option value="still life">still life</option>
              <option value="wildlife">wildlife</option>
              <option value="landscape">landscape</option>
              {{/select}}
            </select>
          </div>
        </div>
      </div>

      <input type="submit" value="save" class="btn btn-primary">
    </form>
  </div>
</div>