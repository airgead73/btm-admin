<div class="row justify-content-md-center">
  <div class="col-md-6">
    <form action="/works/create" method="POST">
      <div class="form-row">
        <div class="col-md-8">
          <input name="title" type="text" class="form-control" placeholder="work title">
          <textarea name="desc" id="desc" placeholder="description" class="form-control mt-2"></textarea>
        </div>
        <div class="col-md-4">
          <select id="modality" name="modality" class="form-control">
            <option value="sculpture">sculpture</option>
            <option value="painting">painting</option>
            <option value="drawing">drawing</option>
          </select>
          <select id="material" name="material" class="form-control mt-2">
            <option value="bronze">bronze</option>
            <option value="marble">marble</option>
            <option value="plaster">plaster</option>
            <option value="alabaster">alabaster</option>
            <option value="clay">clay</option>
            <option value="oil and canvas">oil & canvas</option>
            <option value="pencil">pencil</option>
          </select>
          <select id="category" name="category" class="form-control mt-2">
            <option value="figure">figure</option>
            <option value="abstract">abstract</option>
            <option value="portrait">portrait</option>
            <option value="still life">still life</option>
            <option value="wildlife">wildlife</option>
            <option value="landscape">landscape</option>
          </select>
        </div>
      </div>
      <div class="form-row mt-4">
        <div class="col-md-12">
          <input type="submit" value="add work" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>