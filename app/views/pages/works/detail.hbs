<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">

        <div class="col-md-2">
          <h1 class="h3">{{title}}</h1>
          <p><a href="/works/{{work._id}}/update">update</a> | <a href="/works/{{work._id}}/photos/create">add photo</a>
          </p>
        </div>
        <div class="col-md-10">
          <div class="row">
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5>specs</h5>
                  <ul>
                    <li>{{work.modality}}</li>
                    <li>{{work.material}}</li>
                    <li>{{work.category}}</li>
                  </ul>
                </div>
              </div>

            </div>
            <div class="col-md-8">
              <div class="card">
                <div class="card-body">
                  <h5>description</h5>
                  <p>{{work.desc}}</p>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-2">
      <h1 class="h4">Photos</h1>
    </div>
    <div class="col-md-10">
      {{#if photos}}
      {{#each photos}}
      <div class="card mb-2">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <img class="img-fluid rounded" src="{{this.url}}" alt="{{this.title}}" title="{{this.title}}" />
            </div>
            <div class="col-4">
              <form action="/photos/{{this._id}}/delete?_method=DELETE" method="POST" class="text-right">
                <input type="hidden" name="_method" id="hidden_delete" value="DELETE">
                <a href="/works/{{this._id}}/detail" class="btn btn-link">view detail</a>
                <input type="submit" name="submit" id="delete_work" value="delete photo" class="btn btn-link">
              </form>
              <div class="card mt-3">
                <div class="card-body">
                  <h5>title</h5>
                  <p>{{this.title}}</p>
                  <h5>caption</h5>
                  <p>{{this.caption}}</p>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <p>No photos</p>
      {{/if}}
    </div>
  </div>
</div>